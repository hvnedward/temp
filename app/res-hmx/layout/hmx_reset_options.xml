<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/system_reset_text"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:gravity="center_horizontal"
        android:text="@string/system_reset_help_text"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/system_reset_button" />

    <Button
        android:id="@+id/system_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="206dp"
        android:text="@string/system_reset_button_text"
        android:textAppearance="@style/SettingsListItemTextAppearance"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingStart="61dp"
        android:paddingEnd="61dp"
        android:background="@color/color_system_preference_button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/system_reset_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>