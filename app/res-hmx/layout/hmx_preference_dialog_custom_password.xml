<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="785dp"
    android:layout_height="384dp"
    android:background="@color/color_popup_background"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_popup_title"
        android:text="@string/network_connection_password"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="58dp"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/message"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/alert_dialog_title_margin_bottom"
            android:layout_marginEnd="@dimen/alert_dialog_title_margin_end"
            android:layout_marginStart="@dimen/alert_dialog_title_margin_start"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"/>

        <EditText
            android:id="@android:id/edit"
            android:layout_width="670dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:background="@android:color/white"
            android:hint="@string/network_connection_password_hint"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:button="@drawable/set_checkbox_selector"
            android:paddingLeft="24dp"
            android:layout_marginTop="33dp"
            android:text="@string/show_password"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:textAppearance="@style/PaneMenuListItemTextAppearance"
            android:text="@string/dialog_cancel_button_text"
            android:background="@color/color_button_background"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:textAppearance="@style/PaneMenuListItemTextAppearance"
            android:text="@string/dialog_save_button_text"
            android:background="@color/color_button_background"/>

    </LinearLayout>

</LinearLayout>